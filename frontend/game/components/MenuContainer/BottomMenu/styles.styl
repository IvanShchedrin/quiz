.menu-container .bottom-menu
  position: relative
  height: 10%
  font-size: 1.7em

  background-color: #3c4658
  box-shadow: 0 0 35px 0 rgba(0,0,0, 0.5)

  .link-icons
    position: absolute
    top: 0
    right: 0
    bottom: 10px
    left: 0

    a
      margin: 0 5px
      text-decoration: none
      color: #eaeaea

    display: flex
    flex-direction: row
    justify-content: center
    align-items: center

  .signature
    position: absolute
    display: inline-block
    width: 100%
    text-align: center
    bottom: 2px
    left: 0
    color: #aeaeae
    font-size: .45em

    a
      text-decoration: none
      color: #3eaaeb

@media all and (max-height: 359px)
  .menu-container .bottom-menu
    height: 20%

@media all and (min-height: 360px) and (max-height: 500px)
  .menu-container .bottom-menu
    height: 15%

@media all and (min-height: 1024px)
  .menu-container .bottom-menu .link-icons a
      font-size: 1.7em
      margin: 0 15px
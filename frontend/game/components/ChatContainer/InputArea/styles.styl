.chat-container .chat-input-area
  height: 15%
  z-index: 5
  position: relative

  background-color: #efefef
  box-shadow: 0 0 20px 5px rgba(0,0,0,0.2)

  .chat-textarea
    width: 100%
    height: 70%

    #chat-input
      width: 98%
      height: 70%
      max-width: 98%
      max-height: 70%
      border: none
      padding: 0 1%
      position: absolute
      bottom: 30%


  .chat-btns
    width: 100%
    height: 30%
    position: absolute
    bottom: 0

    input
      float: right
      height: 100%
      width: 25%


@media all and (min-width: 1280px) and (max-height: 599px)
  .chat-container .chat-input-area
    .chat-textarea
      height: 50%
      font-size: .8rem
    .chat-btns
      font-size: .8rem

@media all and (min-width: 1280px) and (max-height: 899px)
  .chat-container .chat-input-area
    .chat-textarea
      height: 70%

@media all and (min-width: 1024px) and (max-height: 899px)
  .chat-container .chat-input-area
    .chat-textarea
      height: 70%

@media all and (max-width: 1023px)
  .chat-container .chat-input-area
    #chat-input
      font-size: 2rem
    .chat-btns input
      font-size: 2rem

@media all and (max-width: 767px)
  .chat-container .chat-input-area
    #chat-input
      font-size: 1.7rem
    .chat-btns input
      font-size: 1.7rem

@media all and (max-width: 359px)
  .chat-container .chat-input-area
    #chat-input
      font-size: 1.5rem
    .chat-btns input
      font-size: 1.5rem
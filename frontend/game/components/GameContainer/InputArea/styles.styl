.game-wrap .game-input-area
  background-color: #EFEFEF
  box-shadow: 0 0 20px 5px rgba(0,0,0,0.2)
  height: 15%
  text-align: center
  z-index: 5

  display: flex;
  flex-direction: column;
  justify-content: center;

  overflow: hidden

  input
    text-align: center
    font-size: 1.5rem
    width: 20rem
    min-width: 15rem
    margin: 0 10px
    padding: 8px
    border: none
    border-bottom: 2px solid #222222
    background-color: rgba(0,0,0,0)

  input[type=text]:focus
    outline: none


  button
    font-size: 1.3rem
    background-color: #2B7F30
    border: none
    color: #EFEFEF
    padding: 12px 32px
    text-align: center
    cursor: pointer
    transition: .2s

    &:hover
      background-color: #5BAF40

    &:active
      background-color: #333333
      transition: none


@media all and (max-width: 479px)
  .game-wrap .game-input-area
    input
      font-size: 2.5rem
      width: 70%

    button
      display: none


@media all and (max-height: 479px) and (max-width: 992px)
  .game-wrap .game-input-area
    button
      display: none
.game-wrap .timer
  font-size: 250px
  position: absolute

  display: flex;
  flex-direction: column;
  justify-content: center;

  text-align: center
  top: 0
  width: 100%
  height: 100%
  z-index: -1
  color: #222


@media all and (min-height: 1200px)
  .game-wrap .timer
    font-size: 400px

@media all and (max-height: 1199px) and (min-height: 1024px)
  .game-wrap .timer
    font-size: 300px

@media all and (max-height: 1023px) and (min-height: 640px)
  .game-wrap .timer
    font-size: 250px

@media all and (max-height: 639px) and (min-height: 480px)
  .game-wrap .timer
    font-size: 200px

@media all and (max-height: 479px) and (min-height: 320px)
  .game-wrap .timer
    font-size: 150px

@media all and (max-height: 319px) and (min-height: 240px)
  .game-wrap .timer
    font-size: 100px

@media all and (max-height: 239px)
  .game-wrap .timer
    font-size: 60px
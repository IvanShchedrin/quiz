.game-wrap .action-area .choose-theme

  ul
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    list-style: none
    padding: 0
    margin: 0

    li
      background-color: #f0ad4e
      width: 44%
      height: 44%
      float: left

      margin-left: 4%

      font-size: 2.5rem

      display: flex;
      flex-direction: column
      justify-content: center
      text-align: center
      overflow: hidden

      &:nth-child(3),&:nth-child(4)
        margin-top: .8rem

    &:before
      display: block
      content: ""
      height: 3%
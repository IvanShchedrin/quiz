.game-wrap .hint
  background-color: #d0dcf3
  height: 15%
  font-size: 3rem
  text-align:  center
  letter-spacing: .6rem
  font-family:Consolas,monaco, monospace;
  z-index: 5

  display: flex;
  flex-direction: column;
  justify-content: center;

  overflow: hidden
  box-shadow: 0 0 20px 5px rgba(0,0,0,0.2)


@media all and (max-width: 479px)
  .game-wrap .hint
    font-size: 2.2rem
    letter-spacing: .2rem
    height: 10%